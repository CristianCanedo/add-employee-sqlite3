{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label":"sqlite",
            "type":"shell",
            "command": "gcc",
            "args": [
                "-g",
                "-c",
                "src/sqlite3.c",
                "-o",
                "sqlite3.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "dep",
            "type": "shell",
            "command": "g++",
            "args":[
                "-g",
                "-c",
                "src/main.cpp",
                "-o",
                "main.o"
            ],
            "group": {
                "kind":"build",
                "isDefault": true
            }
        },
        {
            "label": "main",
            "type": "shell",
            "command": "g++",
            "args":[
                "-o",
                "main.exe",
                "sqlite3.o",
                "main.o"
            ],
            "group": {
                "kind":"build",
                "isDefault": true
            }
        }
    ]
}